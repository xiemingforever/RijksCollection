<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RijksCollection" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_900</item>
        <item name="colorPrimaryVariant">@color/grey_900</item>
        <item name="colorOnPrimary">@color/lime_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/grey_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/lime_50</item>
        <item name="android:textColorSecondary">@color/lime_50</item>
        <item name="android:textColorTertiary">@color/lime_50</item>
        <item name="android:textColorPrimaryInverse">@color/lime_50</item>
        <item name="android:textColorSecondaryInverse">@color/lime_50</item>
        <item name="android:textColorTertiaryInverse">@color/lime_50</item>

        <item name="fontFamily">@font/roboto_condensed</item>

        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>